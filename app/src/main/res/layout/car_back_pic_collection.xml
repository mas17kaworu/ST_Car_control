<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_carback_background"/>
    <ImageView
        android:id="@+id/iv_carback_break_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_carback_break_light"
        android:visibility="invisible"/>
    <com.longkai.stcarcontrol.st_exp.customView.MenuViewItem
        android:id="@+id/iv_carback_break_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/carback_break_click"/>

    <ImageView
        android:id="@+id/iv_carback_reversing_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_carback_reversing_light"
        android:visibility="invisible"/>
    <com.longkai.stcarcontrol.st_exp.customView.MenuViewItem
        android:id="@+id/iv_carback_reversing_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/carback_reversing_click"/>

    <ImageView
        android:id="@+id/iv_carback_turnleft_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_carback_turnleft_light"
        android:visibility="invisible"/>
    <com.longkai.stcarcontrol.st_exp.customView.MenuViewItem
        android:id="@+id/iv_carback_turnleft_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/carback_turnleft_click"/>

    <ImageView
        android:id="@+id/iv_carback_turnright_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_carback_turnright_light"
        android:visibility="invisible"/>
    <com.longkai.stcarcontrol.st_exp.customView.MenuViewItem
        android:id="@+id/iv_carback_turnright_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/carback_turnright_click"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/car_seventh_image"
        android:layout_width="118dp"
        android:layout_height="98dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="61dp" />

    <LinearLayout
        android:id="@+id/seventh_content_1"
        android:layout_width="223dp"
        android:layout_height="98dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/car_seventh_image"
        android:background="@drawable/carinfo_six_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/content01_text_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:text="Pmax: 2.5KW"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/content01_text_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"

            android:text="Voltage : 13.2V"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/content01_text_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"

            android:text="Current:  20A"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/car_seventh_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13.6dp"
        android:layout_marginTop="17dp"
        android:text="DC/DC"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold" />



</merge>
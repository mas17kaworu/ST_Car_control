<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_fragment_background">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FRONT LAMP TEST"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/btn_high_beam_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HightBeam 1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"/>
    <Button
        android:id="@+id/btn_high_beam_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HightBeam 2"
        android:layout_alignLeft="@id/btn_high_beam_1"
        android:layout_below="@id/btn_high_beam_1"/>
    <Button
        android:id="@+id/btn_high_beam_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HightBeam 3"
        android:layout_alignLeft="@id/btn_high_beam_1"
        android:layout_below="@id/btn_high_beam_2"/>
    <Button
        android:id="@+id/btn_high_beam_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HightBeam 4"
        android:layout_alignLeft="@id/btn_high_beam_1"
        android:layout_below="@id/btn_high_beam_3"/>
    <Button
        android:id="@+id/btn_high_beam_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HightBeam 5"
        android:layout_alignLeft="@id/btn_high_beam_1"
        android:layout_below="@id/btn_high_beam_4"/>
    <Button
        android:id="@+id/btn_high_beam_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HightBeam 6"
        android:layout_alignLeft="@id/btn_high_beam_1"
        android:layout_below="@id/btn_high_beam_5"/>
    <Button
        android:id="@+id/btn_high_beam_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HightBeam 7"
        android:layout_alignLeft="@id/btn_high_beam_1"
        android:layout_below="@id/btn_high_beam_6"/>
    <Button
        android:id="@+id/btn_high_beam_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HightBeam 8"
        android:layout_alignLeft="@id/btn_high_beam_1"
        android:layout_below="@id/btn_high_beam_7"/>
    <Button
        android:id="@+id/btn_low_beam_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low Beam 1"
        android:layout_alignBaseline="@id/btn_high_beam_1"
        android:layout_toRightOf="@id/btn_high_beam_1"/>

    <Button
        android:id="@+id/btn_low_beam_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low Beam 2"
        android:layout_alignLeft="@id/btn_low_beam_1"
        android:layout_below="@id/btn_high_beam_1"/>

    <ImageView
        android:id="@+id/iv_front_lamp_test_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/high_beam_back"
        android:layout_marginStart="100dp"
        android:layout_marginTop="600dp"
        />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:src="@mipmap/ic_front_lamp_test"
        android:layout_centerVertical="true"
        android:layout_marginStart="400dp"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_fragment_background">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_homepage_car"
        android:layout_marginTop="200dp"
        android:layout_centerInParent="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_homepage_seat"
        android:layout_marginStart="530dp"
        android:layout_marginTop="130dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/homepage_seat"
        android:layout_marginStart="585dp"
        android:layout_marginTop="145dp"
        android:textColor="#ffffff"/>

    <ImageView
        android:id="@+id/iv_homepage_led"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_homepage_lights"
        android:layout_marginStart="70dp"
        android:layout_marginTop="485dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/homepage_front_lamp"
        android:layout_below="@id/iv_homepage_led"
        android:layout_alignStart="@id/iv_homepage_led"
        android:layout_marginStart="7dp"
        android:textColor="#ffffff" />

<!--    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_homepage_line"
        android:layout_marginStart="490dp"
        android:layout_marginTop="470dp"/>-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_homepage_door"
        android:layout_marginStart="560dp"
        android:layout_marginTop="540dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="door"
        android:layout_marginStart="615dp"
        android:layout_marginTop="555dp"
        android:textColor="#ffffff" />

    <ImageView
        android:id="@+id/iv_homepage_front_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_homepage_qiangai"
        android:layout_marginTop="230dp"
        android:layout_marginStart="70dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Front box"
        android:textColor="#ffffff"
        android:layout_below="@+id/iv_homepage_front_box"
        android:layout_alignStart="@+id/iv_homepage_front_box" />

    <ImageView
        android:id="@+id/iv_homepage_reverse_mirror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_homepage_daochejin"
        android:layout_marginStart="355dp"
        android:layout_marginTop="130dp" />
    <TextView
        android:layout_toRightOf="@id/iv_homepage_reverse_mirror"
        android:layout_alignTop="@id/iv_homepage_reverse_mirror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reverse mirror"
        android:layout_marginTop="15dp"
        android:textColor="#ffffff"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_homepage_houbeixiang"
        android:layout_marginTop="130dp"
        android:layout_marginStart="838dp"
        android:id="@+id/iv_homepage_back_trunk" />
    <TextView
        android:layout_toRightOf="@id/iv_homepage_back_trunk"
        android:layout_alignTop="@id/iv_homepage_back_trunk"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trunk"
        android:textColor="#ffffff"
        android:id="@+id/textView2" />

    <ImageView
        android:id="@+id/iv_homepage_auto_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_homepage_auto_display_u"
        android:layout_marginStart="100dp"
        android:layout_marginTop="60dp"/>

</RelativeLayout>
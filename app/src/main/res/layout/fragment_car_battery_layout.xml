<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="BMS"
        android:textSize="24sp"
        android:textStyle="bold"
        android:id="@+id/battery_title"
        android:layout_marginTop="17dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.longkai.stcarcontrol.st_exp.view.BatteryView
        android:layout_marginTop="61dp"
        android:id="@+id/batter_body_icon"
        android:layout_marginLeft="14dp"
        android:layout_width="50dp"
        android:layout_height="98dp"/>
    <LinearLayout
        android:layout_marginLeft="4dp"
        android:layout_marginTop="61dp"
        android:paddingLeft="21.6dp"
        android:paddingBottom="18dp"
        android:paddingTop="16dp"
        android:layout_toRightOf="@id/batter_body_icon"
        android:background="@drawable/carinfo_batter_right_icon"
        android:layout_width="123.6dp"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_height="98dp">
        <TextView
            android:layout_weight="1"
            android:text="电量 88%"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <TextView
            android:layout_weight="1"
            android:text="电量 88%"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <TextView
            android:layout_weight="1"
            android:text="电量 88%"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
    </LinearLayout>
    <com.longkai.stcarcontrol.st_exp.view.IndicatorView
        android:layout_alignParentRight="true"
        android:layout_width="0dp"
        android:id="@+id/round_light_1"
        android:layout_marginTop="23dp"
        android:layout_marginRight="25dp"
        android:layout_height="0dp"/>

    <com.longkai.stcarcontrol.st_exp.view.IndicatorView
        android:layout_alignParentRight="true"
        android:layout_width="0dp"
        android:layout_below="@id/round_light_1"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:id="@+id/round_light_2"
        android:layout_height="0dp"/>

    <Switch
        android:layout_below="@id/round_light_2"
        android:id="@+id/vcu_car_switch_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:text="DFA optimize"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</merge>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_fragment_background">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ST China VCU Home"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:textStyle="italic"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_vcu_mcu_car"
        android:layout_alignParentRight="true"/>
    <com.longkai.stcarcontrol.st_exp.customView.DashboardView
        android:id="@+id/dashboard_mcu_speed"
        android:layout_marginStart="117dp"
        android:layout_marginTop="110dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="405dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_mcu_niuju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电机扭矩"
            android:textSize="25sp"
            android:textColor="@color/colorTextGreenSelected"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_vcu_mcu_textback"
            android:layout_toEndOf="@id/tv_mcu_niuju"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="465dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_mcu_dianliu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电机电流"
            android:textSize="25sp"
            android:textColor="@color/colorTextGreenSelected"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_vcu_mcu_textback"
            android:layout_toEndOf="@id/tv_mcu_dianliu"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_fragment_background">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DIAGNOSTIC"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tv_diagnostic_temp_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="can't receive"
        android:textSize="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="200dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_dianluban"
        android:layout_centerInParent="true"/>

    <com.longkai.stcarcontrol.st_exp.customView.CoverHeatView
        android:id="@+id/temperature_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#554B0082"/>

    <ImageView
        android:id="@+id/iv_diagnostic_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/high_beam_back"
        android:layout_marginStart="100dp"
        android:layout_marginTop="600dp"
        />
</RelativeLayout>
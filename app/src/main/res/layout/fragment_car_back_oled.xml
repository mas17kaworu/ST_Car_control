<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_fragment_background"
    android:orientation="vertical"
    >
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="OLED"
      android:textColor="#ffffff"
      android:textSize="30sp"
      android:textStyle="italic"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_bias="0.1"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.02"
      />
  <!--  todo change to include-->
  <include
      android:id="@+id/ic_back_oled_background"
      layout="@layout/group_back_oled"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.2"
    />

  <View
      android:id="@+id/guideLine"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      app:layout_constraintTop_toBottomOf="@+id/ic_back_oled_background"
      android:layout_marginTop="30dp"/>

  <ImageView
      android:id="@+id/btn_back_oled_break"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/oled_break_btn_click"
      app:layout_constraintEnd_toStartOf="@+id/btn_back_oled_reversing"
      app:layout_constraintStart_toStartOf="@+id/ic_back_oled_background"
      app:layout_constraintTop_toBottomOf="@+id/guideLine"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Break"
      android:textSize="14sp"
      android:textColor="#ffffff"
      android:layout_marginTop="@dimen/button_text_to_image"
      app:layout_constraintEnd_toEndOf="@+id/btn_back_oled_break"
      app:layout_constraintStart_toStartOf="@+id/btn_back_oled_break"
      app:layout_constraintTop_toBottomOf="@+id/btn_back_oled_break"
      />


  <ImageView
      android:id="@+id/btn_back_oled_reversing"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/oled_revers_btn_click"
      app:layout_constraintEnd_toStartOf="@+id/btn_back_oled_position"
      app:layout_constraintStart_toEndOf="@+id/btn_back_oled_break"
      app:layout_constraintTop_toBottomOf="@+id/guideLine"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="reverse"
      android:textSize="14sp"
      android:textColor="#ffffff"
      android:layout_marginTop="@dimen/button_text_to_image"
      app:layout_constraintEnd_toEndOf="@+id/btn_back_oled_reversing"
      app:layout_constraintStart_toStartOf="@+id/btn_back_oled_reversing"
      app:layout_constraintTop_toBottomOf="@+id/btn_back_oled_reversing"
      />

  <ImageView
      android:id="@+id/btn_back_oled_position"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/oled_positon_btn_click"
      app:layout_constraintEnd_toStartOf="@+id/btn_back_oled_left"
      app:layout_constraintStart_toEndOf="@+id/btn_back_oled_reversing"
      app:layout_constraintTop_toBottomOf="@+id/guideLine"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="position"
      android:textSize="14sp"
      android:textColor="#ffffff"
      android:layout_marginTop="@dimen/button_text_to_image"
      app:layout_constraintEnd_toEndOf="@+id/btn_back_oled_position"
      app:layout_constraintStart_toStartOf="@+id/btn_back_oled_position"
      app:layout_constraintTop_toBottomOf="@+id/btn_back_oled_position"
      />

  <ImageView
      android:id="@+id/btn_back_oled_left"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/oled_left_btn_click"
      app:layout_constraintEnd_toStartOf="@+id/btn_back_oled_right"
      app:layout_constraintStart_toEndOf="@+id/btn_back_oled_position"
      app:layout_constraintTop_toBottomOf="@+id/guideLine"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Turn Left"
      android:textSize="14sp"
      android:textColor="#ffffff"
      android:layout_marginTop="@dimen/button_text_to_image"
      app:layout_constraintEnd_toEndOf="@+id/btn_back_oled_left"
      app:layout_constraintStart_toStartOf="@+id/btn_back_oled_left"
      app:layout_constraintTop_toBottomOf="@+id/btn_back_oled_left"
      />

  <ImageView
      android:id="@+id/btn_back_oled_right"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/oled_right_btn_click"
      app:layout_constraintEnd_toStartOf="@+id/btn_back_oled_a1"
      app:layout_constraintStart_toEndOf="@+id/btn_back_oled_left"
      app:layout_constraintTop_toBottomOf="@+id/guideLine"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Turn Right"
      android:textSize="14sp"
      android:textColor="#ffffff"
      android:layout_marginTop="@dimen/button_text_to_image"
      app:layout_constraintEnd_toEndOf="@+id/btn_back_oled_right"
      app:layout_constraintStart_toStartOf="@+id/btn_back_oled_right"
      app:layout_constraintTop_toBottomOf="@+id/btn_back_oled_right"
      />

  <ImageView
      android:id="@+id/btn_back_oled_a1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/oled_auto1_btn_click"
      app:layout_constraintEnd_toStartOf="@+id/btn_back_oled_a2"
      app:layout_constraintStart_toEndOf="@+id/btn_back_oled_right"
      app:layout_constraintTop_toBottomOf="@+id/guideLine"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Auto1"
      android:textSize="14sp"
      android:textColor="#ffffff"
      android:layout_marginTop="@dimen/button_text_to_image"
      app:layout_constraintEnd_toEndOf="@+id/btn_back_oled_a1"
      app:layout_constraintStart_toStartOf="@+id/btn_back_oled_a1"
      app:layout_constraintTop_toBottomOf="@+id/btn_back_oled_a1"
      />

  <ImageView
      android:id="@+id/btn_back_oled_a2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/oled_auto2_btn_click"
      app:layout_constraintEnd_toStartOf="@+id/btn_back_oled_a3"
      app:layout_constraintStart_toEndOf="@+id/btn_back_oled_a1"
      app:layout_constraintTop_toBottomOf="@+id/guideLine"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Auto2"
      android:textSize="14sp"
      android:textColor="#ffffff"
      android:layout_marginTop="@dimen/button_text_to_image"
      app:layout_constraintEnd_toEndOf="@+id/btn_back_oled_a2"
      app:layout_constraintStart_toStartOf="@+id/btn_back_oled_a2"
      app:layout_constraintTop_toBottomOf="@+id/btn_back_oled_a2"
      />

  <ImageView
      android:id="@+id/btn_back_oled_a3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/oled_auto3_btn_click"
      app:layout_constraintEnd_toEndOf="@+id/ic_back_oled_background"
      app:layout_constraintStart_toEndOf="@+id/btn_back_oled_a2"
      app:layout_constraintTop_toBottomOf="@+id/guideLine"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Auto3"
      android:textSize="14sp"
      android:textColor="#ffffff"
      android:layout_marginTop="@dimen/button_text_to_image"
      app:layout_constraintEnd_toEndOf="@+id/btn_back_oled_a3"
      app:layout_constraintStart_toStartOf="@+id/btn_back_oled_a3"
      app:layout_constraintTop_toBottomOf="@+id/btn_back_oled_a3"
      />


</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@mipmap/ic_seat_back_background"/>
    <com.longkai.stcarcontrol.st_exp.customView.MenuViewItem
        android:id="@+id/seat_back_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/seat_back_backward"/>
    <com.longkai.stcarcontrol.st_exp.customView.MenuViewItem
        android:id="@+id/seat_back_backward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/seat_back_forward"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_fragment_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OBC_Demo"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:textStyle="italic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.02"/>





    <ImageView
        android:id="@+id/iv_vcu_obc_obc_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_vcu_obc_off"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.75"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OBC switch"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/iv_vcu_obc_obc_switch"
        app:layout_constraintRight_toRightOf="@id/iv_vcu_obc_obc_switch"
        app:layout_constraintLeft_toLeftOf="@id/iv_vcu_obc_obc_switch"/>

    <ImageView
        android:id="@+id/iv_vcu_obc_dcdc_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_vcu_obc_off"
        app:layout_constraintTop_toTopOf="@id/iv_vcu_obc_obc_switch"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.9"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DCDC switch"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_below="@id/iv_vcu_obc_dcdc_switch"
        android:layout_alignStart="@+id/iv_vcu_obc_dcdc_switch"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/iv_vcu_obc_dcdc_switch"
        app:layout_constraintRight_toRightOf="@id/iv_vcu_obc_dcdc_switch"
        app:layout_constraintLeft_toLeftOf="@id/iv_vcu_obc_dcdc_switch"/>

</android.support.constraint.ConstraintLayout>
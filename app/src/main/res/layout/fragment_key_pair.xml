<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">

    <TextView
        android:id="@+id/keyPairText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="钥匙配对"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/keyIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/key1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/door_lock"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/key1"
        style="@style/KeyPairNumber"
        android:layout_marginTop="50dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/key2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keyIcon" />

    <TextView
        android:id="@+id/key2"
        style="@style/KeyPairNumber"
        android:layout_marginStart="20dp"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@id/key1"
        app:layout_constraintEnd_toStartOf="@+id/key3"
        app:layout_constraintStart_toEndOf="@+id/key1"
        app:layout_constraintTop_toTopOf="@id/key1" />

    <TextView
        android:id="@+id/key3"
        style="@style/KeyPairNumber"
        android:layout_marginStart="20dp"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="@id/key1"
        app:layout_constraintEnd_toStartOf="@+id/key4"
        app:layout_constraintStart_toEndOf="@+id/key2"
        app:layout_constraintTop_toTopOf="@id/key1" />

    <TextView
        android:id="@+id/key4"
        style="@style/KeyPairNumber"
        android:layout_marginStart="20dp"
        android:text="4"
        app:layout_constraintBottom_toBottomOf="@id/key1"
        app:layout_constraintEnd_toStartOf="@+id/key5"
        app:layout_constraintStart_toEndOf="@+id/key3"
        app:layout_constraintTop_toTopOf="@id/key1" />

    <TextView
        android:id="@+id/key5"
        style="@style/KeyPairNumber"
        android:layout_marginStart="40dp"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="@id/key1"
        app:layout_constraintEnd_toStartOf="@+id/key6"
        app:layout_constraintStart_toEndOf="@+id/key4"
        app:layout_constraintTop_toTopOf="@id/key1" />

    <TextView
        android:id="@+id/key6"
        style="@style/KeyPairNumber"
        android:layout_marginStart="20dp"
        android:text="6"
        app:layout_constraintBottom_toBottomOf="@id/key1"
        app:layout_constraintEnd_toStartOf="@+id/key7"
        app:layout_constraintStart_toEndOf="@+id/key5"
        app:layout_constraintTop_toTopOf="@id/key1" />

    <TextView
        android:id="@+id/key7"
        style="@style/KeyPairNumber"
        android:layout_marginStart="20dp"
        android:text="7"
        app:layout_constraintBottom_toBottomOf="@id/key1"
        app:layout_constraintEnd_toStartOf="@+id/key8"
        app:layout_constraintStart_toEndOf="@+id/key6"
        app:layout_constraintTop_toTopOf="@id/key1" />

    <TextView
        android:id="@+id/key8"
        style="@style/KeyPairNumber"
        android:layout_marginStart="20dp"
        android:text="8"
        app:layout_constraintBottom_toBottomOf="@id/key1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/key7"
        app:layout_constraintTop_toTopOf="@id/key1" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/keys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="key1,key2, key3, key4, key5, key6, key7, key8"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>